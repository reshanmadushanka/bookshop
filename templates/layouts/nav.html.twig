{% if app.user %}
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">
      Book Shop 
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="#">Books</a>
    </nav>
    <a class="btn btn-outline-primary" href="{{ path('app_logout') }}">Logout</a>
  </div>
{% else %}
  <div class="d-flex flex-column flex-md-row align-items-center p-3 px-md-4 mb-3 bg-white border-bottom shadow-sm">
    <h5 class="my-0 mr-md-auto font-weight-normal">
      Book Shop Admin Login
    </h5>
    <nav class="my-2 my-md-0 mr-md-3">
      <a class="p-2 text-dark" href="{{ path('app_register') }}">Register</a>
    </nav>
    <a class="btn btn-outline-primary" href="{{ path('app_login') }}">Login</a>
  </div>
{% endif %}
